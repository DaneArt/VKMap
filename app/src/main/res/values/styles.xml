<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTextTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonOutline" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginEnd">@dimen/btn_margin_4</item>
        <item name="android:layout_marginStart">@dimen/btn_margin_4</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">@dimen/dimen_large_32</item>
        <item name="android:textColor">#818C99</item>
    </style>
</resources>